<header>
    <div class="search">
        <%= form_tag(folders_path, :method => "get") do %>
            <%= text_field_tag :search, '', placeholder: "記事を探す" %> 
            <%= submit_tag "記事検索" ,:username => nil ,class: "button is-info"%> 
        <% end %> 
    </div>
</header>
<div class="main">
    <div class="container-index">
        <% if @folders.present? %>
        <table class="table table-striped table-bordered table-hover table-condensed" style="margin-bottom: 30px;">
            <thead style="background-color: #CBFFD3;">
                <tr><th>検索結果<br>ID</th><th>タイトル</th></tr>
            </thead>
            <tbody>
                <div class="search-file">
                    <%= render partial: "folders/search_folder", :locals => {folders: @folders, folder_new: @folder_new} %>
                </div>
            </tbody>
        </table> 
        <% end %>
        <table class="table table-striped table-bordered table-hover table-condensed create-index">
            <thead style="background-color: #BAD3FF;">
                <tr></tr><th>ID</th><th>タイトル</th></tr>
            </thead>
            <tbody>
                <div id="folder_create">
                    <%= render partial: "folders/create", :locals => {items: @items, folder_new: @folder_new} %>
                </div>
            </tbody>
        </table>
    </div>
</div>
