<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    overscroll-behavior: none;
}

header {
    width: 100%;
    position: fixed;
    text-align: center;
    padding: 10px 0;
}

.container-index {
    width: 80%;
    float: right;
    padding-right: 10px;
    margin-top: 50px;
}

.save-btn {
    float: right;
    padding-right: 10px;
}

@media screen and (max-width: 850px) {
    .container-index {
        float: none;
        margin: 50px auto 77px auto;
        padding: 0 20 0 20;
        width: 100%
    }
    
    header {
        position: relative;
        top: 0px;
        position: fixed;
    }
}
</style>

<header>
    <div class="search">
        <%= form_tag(folders_path, :method => "get") do %>
            <%= text_field_tag :search, '', placeholder: "記事を探す" %> 
            <%= submit_tag "記事検索" ,:username => nil ,class: "button is-info"%> 
        <% end %> 
    </div>
</header>
<div class="main">
    <div class="container-index">
        <% if @folders.present? %>
        <table class="table table-striped table-bordered table-hover table-condensed" style="margin-bottom: 30px;">
            <thead style="background-color: #CBFFD3;">
                <tr><th>ID</th><th>タイトル</th></tr>
            </thead>
            <tbody>
                <div class="search">
                    <%= render partial: "folders/search_folder", :locals => {folders: @folders, folder_new: @folder_new} %>
                </div>
            </tbody>
        </table> 
        <% end %>
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead style="background-color: #BAD3FF;">
                <tr><th>新規記事<br>投稿日</th><th>ID</th><th>タイトル</th></tr>
            </thead>
            <tbody>
                <div id="folder_create">
                    <%= render partial: "folders/create", :locals => {items: @items, folder_new: @folder_new} %>
                </div>
            </tbody>
        </table>
    </div>
</div>
