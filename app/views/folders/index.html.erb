    float: right;
    padding-right: 10px;
}

ul {
    list-style: none
}

li {
    color: gray;
    padding-top: 10px;
}

@media screen and (max-width: 850px) {
    
    .container-index {
        width: 100%;
        float: none;
        margin: 50px auto 77px auto;
        padding-left: 10px;
    }
    
    header {
        position: relative;
        top: 0px;
        position: fixed;
        zindex: 10;
    }
}

    
