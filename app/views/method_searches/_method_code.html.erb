<style>
* {
    word-break: break-all;
}
    .main_container {
        padding: 0.5em 1em;
        margin: 2em 0;
        border-top: solid 6px black;
        box-shadow: 0 3px 4px rgba(0, 0, 0, 0.32);/*影*/
    }
    .class_name {
        border-bottom: solid 1px black;
        padding-bottom: 10px;
    }
    .class_container {
        position: absolute;
        font-size: 20px;
    }
    .name_container {
        position: relative;
    }
    .description_container {
        word-wrap: break-word;
    }
    .article_url {
        text-align: right;
    }
    .article_button {
        display: inline-block;
        padding: 0.3em 1em;
        text-decoration: none;
        color: black;
        border: solid 2px #CC0000;
        border-radius: 3px;
        transition: .4s;
    }
    .article_button:hover {
        background: #CC0000;
        color: white;
    }
</style>
<% extracted_method_name.zip(extracted_method_url, extracted_method_class, extracted_method_description).each do |method_name, method_url, method_class, method_description| %>
    <div class="container">
        <div class="row">
            <div class="col-md-11 offset-1">
                <div class="main_container">
                    <div class="class_name">
                        <div class="class_container">
                            <%= method_class %>
                        </div>
                        
                        <div class="name_container">
                            <%= method_name %>
                        </div>
                    </div>
                    <h7 class="description_container">
                        <%= method_description %>
                    </h7>
                    <div class="article_url">
                        <%= link_to "記事へ", method_url, target: :_blank, class: "article_button" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>

