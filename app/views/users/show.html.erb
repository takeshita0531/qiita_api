  /*  padding: 0;*/
  /*}*/

  body {
      overscroll-behavior: none;
  }

  .user-show {
    text-align: center;
    height: 60px;
    line-height: 60px;
    
  }
  
  .dropdown {
    float: right;
  }
  
  .drop-hover:hover > .dropdown-menu {
    display: block !important;
  }
  
  .delete {
    padding-left: 33px;
  }
  
  .main {
    width: 80%;
    float: right;
    margin-right: 20px;
  }
  
  .container {
    margin: 0;
  }
  
  /*.dropdown {*/
  /*  width: 50vw;*/
  /*  min-width: ;*/
  /*}*/
    
</style>
<div class="main">
<div class="user-show">
  <%= @user.name %>
</div>

  <% if @user.id == current_user.id %>
          <table class="table table-striped table-bordered table-hover table-condensed">
          <thead style="background-color: #E9FFA5">
              <tr><th>ID</th><th>タイトル</th></tr>
          </thead>
          <tbody>
            <% @folders.zip(@files) do |folder, file| %>
  <tr><td><%= folder.user_name %></td>
  <td>
  <a href=<%= folder.url %> target = ["_blank"]><%= folder.title %></a>
  
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
      <a class="fa fa-ellipsis-v" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></a>
    </button>
        <ul class="dropdown-menu dropdown-menu-right">
          <li class="dropleft drop-hover">
            <a class="dropdown-item dropdown-toggle" href="#" data-toggle="dropdown">保存先</a>
            <ul class="dropdown-menu">
              <li class="dropleft drop-hover">
                <a class="dropdown-item" href="#">
                 <% @files.each do |file| %>
                    <ul><li id="folder_save"><%= link_to file.file_name,  user_path(file_id: file.id, folder_id: folder.id, anchor: "folder_save") %>
                      <% if folder.file_id == file.id %>
                            (保存中)
                      <% end %>
                    </li></ul>
                 <% end %>
                </a>
              </li>
            </ul>
          </li>
          <div class="delete">
            <li id="folder_delete"><a class="dropdown-item" href="#"><%= link_to "削除", user_path(folder_id: folder.id, destroy: "destroy", anchor: "folder_delete") %></a>
          </div> 
        </ul>
    </div>
  </td></tr>
<% end %>
          </tbody>
          </table>
  <% end %>
</div>



