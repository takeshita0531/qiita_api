<style>
 main {
   height: 100%;
   width: 100%;
   background: radial-gradient(#43FF6B, #007700);
   display: flex;
   justify-content: center;
   align-items: center;
   padding-top: 50px;
 }
 
 .sign_in {
     padding-bottom: 50px;
 }

 .font_fam {
   font-family: fantasy;
 }
 
 .font_fam {
   color: white;
   padding-bottom: 30px;
 }
 
 .field {
   padding-top: 10px;
 }
 
 input[type="email"]{
  width: 200px;
  height: 50px;
 }
 
 input[type="password"]{
  width: 200px;
  height: 50px;
}

.actions {
  padding-top: 10px;
  padding-bottom: 10px;
}


@media screen and (max-width: 767px) {
    
 main {
    height: 100%;
    padding-top: 0px;
 }
    
 input[type="email"]{
    width: 200px;
    height: 30px;
 }
 
 input[type="password"]{
    width: 200px;
    height: 30px;
 }
 
 .field {
    padding-top: 5px;
 }
 
 .sign_in_btn {
    width: 100px;
    height: 30px;
 }
 
 .font-fam {
    padding-bottom: 0px;
 }
 
 .sign_in {
    padding-bottom: 0px;
 }
}

@media screen and (max-height: 500px) {
    
 main {
    height: 100%;
    padding-top: 0px;
 }
    
 input[type="email"]{
    width: 200px;
    height: 30px;
 }
 
 input[type="password"]{
    width: 200px;
    height: 30px;
 }
 
 .field {
    padding-top: 5px;
 }
 
 .sign_in_btn {
    width: 100px;
    height: 30px;
 }
 
 .font-fam {
    padding-bottom: 0px;
 }
 
 .sign_in {
    padding-bottom: 0px;
 }
}
</style>

<%= render 'layouts/header' %>
<main>
  <div class="sign_in" style="text-align: center;">
    <h2 class="font_fam"><span style="font-family: Comic Sans MS;">QiiMemo</span></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
      </div>
    
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)" %>
      </div>
    
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード再入力" %>
      </div>
    
      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-primary sign_in_btn" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
 </div>
</main>